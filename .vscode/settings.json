{
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "editor.rulers": [80,120],
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "node_modules": true,
    "_site": true,
    "coverage": true
  },
  "scss.colorDecorators.enable": false,
  "search.useIgnoreFilesByDefault": true,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "vim.disableAnnoyingNeovimMessage": true,
  "workbench.welcome.enabled": false,
  "workbench.colorCustomizations": {
    // "statusBar.background" : "#1A1A1A",
    // "statusBar.noFolderBackground" : "#212121",
    // "statusBar.debuggingBackground": "#263238"
    // "editorError.foreground":   "#ffffff99",
    // "editorWarning.foreground": "#ffffff99",
    // "editorInfo.foreground":    "#ffffff99"
  },
  "editor.parameterHints": false,
  "editor.fontSize": 13,
  "editor.fontFamily": "SF Mono, Menlo, Monaco, 'Courier New', monospace",
  "editor.hover": false,
  "editor.fontWeight": "Light",
  "materialTheme.cache.workbench.settings": {
    "themeColours": "Darker"
  },
  "workbench.tips.enabled": false,
  "css.colorDecorators.enable": false,
  "less.colorDecorators.enable": false,
  "editor.wordBasedSuggestions": false,
  "css.validate": false,
  "scss.validate": false,
  "less.validate": false,
  "html.validate.scripts": false,
  "html.validate.styles": false,
  "typescript.validate.enable": false,
  "standard.validate": [],
  "emmet.showExpandedAbbreviation": "never",
  "editor.colorDecorators": false,
  "window.zoomLevel": 0,
  "workbench.activityBar.visible": false,
  "workbench.editor.showIcons": false,
  "workbench.sideBar.location": "left",
  "workbench.colorTheme": "One Dark Pro",
  "javascript.validate.enable": false,
  "php.validate.enable": false,
  "jshint.enable": false
}
