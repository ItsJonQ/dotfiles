# Get SSH Key
alias ssh-copy='pbcopy < ~/.ssh/id_rsa.pub'

# Setup SSH key
# Accepts: IP Address
# Example
# ssh-setup 123.123.123.123
ssh-setup() {
  cat ~/.ssh/id_rsa.pub | ssh root@$1 "mkdir -p ~/.ssh && cat >>  ~/.ssh/authorized_keys"
}


#################################################
# Fun Stuff
#################################################
weather() {
  WEATHER=$(ansiweather -l Toronto)
  print $WEATHER
  say $WEATHER
}

quit() {
  pkill -x $1
}

start-day() {
  echo "✊  Have a great day!";
  open -a Slack;
  open -a Calendar;
  open -a Mail;
  open -a Things3;
}

end-day() {
  echo "✌️  Have a wonderful evening!";
  quit Slack;
  quit Calendar;
  quit Mail;
  quit Things3;
}

